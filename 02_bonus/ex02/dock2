FROM ubuntu:latest
MAINTANER swag
EXPOSE 3000 27017 35729
RUN apt-get -q update && apt0get -y install \
	git \
	curl \
	ssh \
	gcc \
	make \
	build-essential \
	sudo \
	apt-utils  &&\
	apt-get clean && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*
RUN RUN curl -sL https://deb.nodesource.com/setup_6.x | sudo -E bash - \
	&& apt-get -y install nodejs \
	&& apt-get clean \
	&& rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*
RUN npm install --quiet -g bower gulp \
	&& npm cache clean