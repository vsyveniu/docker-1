01

FROM debian
RUN apt-get update -y && apt-get upgrade -y && \
	apt-get install bzip2 wget -y && \
	wget http://dl.4players.de/ts/releases/3.0.13.8/teamspeak3-server_linux_amd64-3.0.13.8.tar.bz2 && \
	bunzip2 *.bz2 && \
	tar -xvf *.tar
CMD ["sh", "teamspeak3-server_linux_amd64/ts3server_minimal_runscript.sh"]

02

FROM ruby

RUN apt-get update && apt-get install nodejs -y && \
	apt-get autoclean -y && apt-get clean -y && \
	gem install rails

# Onbuild Triggers

# Copy application
ONBUILD COPY app/ /opt/app

# Install the stuff
ONBUILD RUN bundle install && \
	rake db:migrate && \
	rake db:setup && \
	rake db:seed

# Set the workdir
WORKDIR /opt/app


must be a dir app with ruby hello world

03


FROM debian:sid

RUN apt-get update && \
	apt-get install --no-install-recommends build-essential ca-certificates \
	git golang-go sqlite libsqlite3-dev openssl openssh-server -y && \
	mkdir -p /root/go/src/github.com/gogits && \
	cd /root/go/src/github.com/gogits && \
	git clone --recurse-submodules -b develop https://github.com/gogits/gogs && \
	cd gogs && \
	go build -v -tags 'sqlite'

ENV USER="root"
WORKDIR /root/go/src/github.com/gogits/gogs
EXPOSE 3000 22
USER root
CMD ["./gogs", "web"]